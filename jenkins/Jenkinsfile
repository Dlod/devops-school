// 1. JF
// 2. build boxfuse
// 3. make docker
// 4. push to registry
// 5. pull in prod

pipeline{
    agent none
    options { timestamps () }
    environment{
        docker_hub_auth = credentials("6e16c4ed-61e5-4431-a61f-cfd12ab5e91e")
    }
    parameters{
        string(name: 'tag', defaultValue: 'v1', description: '')
    }
    stages{
        stage('Build'){
            agent {
                dockerfile {
                    filename 'Dockerfile.ci'
                    dir 'jenkins'
                    args "-v /var/run/docker.sock:/var/run/docker.sock"
                }
            }
            steps{
                sh "docker build -t webapp:${params.tag} -f ${env.WORKSPACE}/jenkins/Dockerfile.ci ${env.WORKSPACE}/jenkins"
                sh "echo ${docker_hub_auth}|docker login --username dlod76 --password-stdin"
                sh "docker tag webapp dlod76/webapp:${params.tag}"
                sh "docker push dlod76/webapp:${params.tag}"
            }
        }
    }
}
