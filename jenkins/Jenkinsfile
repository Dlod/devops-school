// 1. JF
// 2. build boxfuse
// 3. make docker
// 4. push to registry
// 5. pull in prod

pipeline{
    agent none
    options { timestamps () }
    environment{
        docker_hub_auth = credentials("docker_pass")
    }
    parameters{
        string(name: 'tag', defaultValue: 'v1', description: '')
    }
    stages{
        stage('Build'){
            agent {
                dockerfile {
                    filename 'Dockerfile.ci'
                    dir 'jenkins'
                    args '-v /tmp:/tmp'
                }
            }
            steps{
                sh "docker build -t webapp jenkins/Dockerfile.ci"
                sh "echo ${docker_hub_auth}|docker login --username dlod76 --password-stdin"
                sh "docker tag webapp dlod76/webapp:${params.tag}"
                sh "docker push dlod76/webapp:${params.tag}"
            }
        }
    }
}
